@model MediPlus.ViewModels.LoginVM


<h1 class="text-center">Login</h1>
<div class="text-center">
    <h6>Bienvenido a Medi Plus</h6>

</div>

<div class="row justify-content-center">
    <div class="col-sm-4">
        <form asp-action="PostLogin" method="post">
            <div class="form-group">
                <i class="fa fa-user"></i>
                <input asp-for="Email" type="email" class="form-control" placeholder="Username" required="required">
            </div>
            <div class="form-group">
                <i class="fa fa-lock"></i>
                <input asp-for="Pass" type="password" class="form-control" placeholder="Password" required="required">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block btn-lg" value="Login">
            </div>
        </form>
    </div>
</div>

