@model IEnumerable<MediPlus.Models.Cita>

@{
    ViewData["Title"] = "Citas Medicas";
}

<h1>Listado de Citas Para Hoy</h1>

<p>
    <a asp-action="Create">Registrar cita</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Motivo de Consulta
            </th>
            <th>
                Fecha de Consulta
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Doctor
            </th>
            <th>
                Paciente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MotivoDeConsulta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
