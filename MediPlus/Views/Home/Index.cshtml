        <a asp-action="Index" asp-controller="Medicos" class="text-dark"><strong>Medicos</strong></a>
    </div>

    <div class="col-sm-4 mt-3 rounded pb-3  text-center shadow-sm">
        <div class="text-center">
            <i class="fa fa-calendar fa-4x text-dark"></i>
        </div>
        <a asp-action="Index" asp-controller="Citas" class="text-dark"><strong>Citas</strong></a>
    </div>

    <div class="col-sm-4 mt-3 rounded pb-3  text-center shadow-sm">
        <div class="text-center">
            <i class="fa fa-cogs fa-4x text-dark"></i>
        </div>
        <a asp-action="Index" asp-controller="Especialidades" class="text-dark"><strong>Especialidades</strong></a>
    </div>


    <div class="col-sm-4 mt-3 rounded pb-3  text-center shadow-sm">
        <div class="text-center">
            <i class="fa fa-user-plus fa-4x text-dark"></i>
        </div>
        <a asp-action="Index" asp-controller="Usuarios" class="text-dark"><strong>Usuarios</strong></a>
    </div>

    <div class="col-sm-4 mt-3 rounded pb-3  text-center shadow-sm">
        <div class="text-center">
            <i class="fa fa-id-card fa-4x text-dark"></i>
        </div>
        <a asp-action="Index" asp-controller="Roles" class="text-dark"><strong>Roles</strong></a>
    </div>

    <div class="col-sm-4 mt-3 rounded pb-3  text-center shadow-sm">
        <div class="text-center">
            <i class="fa fa-male fa-4x text-dark"></i>
        </div>
        <a asp-action="Index" asp-controller="Secretariums" class="text-dark"><strong>Secretarias</strong></a>
    </div>



</div>

