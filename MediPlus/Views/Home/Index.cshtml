        <div class="col-sm-4 mt-3 rounded pb-3  text-center shadow-sm">
            <div class="text-center">
                <i class="fa fa-envelope fa-4x text-warning"></i>
            </div>
            <a asp-action="Index" asp-controller="Citas" class="text-dark"><strong>Administrar Citas de Doctor (@MediPlus.LocalData.LocalData.Usuario.Doctor.Nombre)</strong></a>
        </div>

        <div class="col-sm-4 mt-3 rounded pb-3  text-center shadow-sm">
            <div class="text-center">
                <i class="fa fa-user-plus fa-4x text-secondary"></i>
            </div>
            <a asp-action="Create" asp-controller="Usuarios" class="text-dark"><strong>Crear Usuario a Pacientes</strong></a>
