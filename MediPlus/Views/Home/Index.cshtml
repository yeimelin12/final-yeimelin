{


    <div class="row mt-3">

        <div class="col-sm-4 mt-3  rounded pb-3  text-center shadow-sm">
            <div class="text-center">
                <i class="fa fa-user fa-4x text-primary"></i>
            </div>
            <a asp-action="Create" asp-controller="Pacientes" class="text-dark"><strong>Registrar Pacientes</strong></a>
